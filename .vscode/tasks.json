{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with GCC 13",
      "type": "shell",
      "command": "/usr/local/gcc-13.2/bin/g++",  
      "args": [
        "-std=c++20",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}